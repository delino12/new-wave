    <style type="text/css">
        #exampleInputPassword1 {
            padding: 1em;
        }

    </style>

    <main>
        <div class="container">
            <div class="login-box">
                <h2>Login</h2> 
                <form action="/login-user" method="POST" class="admin-login">
                    <input type="hidden" name="__token" value="{{ body.token }}"> <!--Api Auth token-->
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input name="email" type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input name="password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required="">
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button> <br /><br />
                    <a href="">Forgot Password?</a>
                </form>
            </div>
        </div>
    </main>